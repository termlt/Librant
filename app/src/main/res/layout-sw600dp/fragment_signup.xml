<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left_black"
            android:contentDescription="@string/back_button"
            app:tint="@color/buttons_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/signup_title"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/lato_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/main_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/signup_subtitle"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/revolin_thin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/text_color_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_signup_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/signup_with_google"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:padding="@dimen/_8sdp"
                app:iconTint="@null"
                app:icon="@drawable/google_icon"
                app:iconSize="@dimen/_20sdp"
                app:backgroundTint="#FBFAFA"
                app:cornerRadius="@dimen/_20sdp"
                app:iconGravity="textStart"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="#E4E3E3E3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/signup_with_email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:padding="@dimen/_8sdp"
                app:backgroundTint="#8AD6D5D5"
                app:icon="@drawable/mail_icon_filled"
                app:iconGravity="textStart"
                app:iconTint="@color/black"
                app:iconSize="@dimen/_20sdp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_existing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:padding="@dimen/_7sdp"
            android:text="@string/already_have_account"
            android:textColor="@color/buttons_color"
            app:backgroundTint="#79D6DDD2"
            app:cornerRadius="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/tv_terms_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="@string/terms_and_privacy"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/text_color_privacy"
            android:gravity="center" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
